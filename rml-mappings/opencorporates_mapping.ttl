  a rr:TriplesMap ;

  rml:logicalSource [
    rml:source "input.xml" ; 
    rml:referenceFormulation ql:XPath ;
    rml:iterator "/root/results"
  ];

  rr:subjectMap [
    rr:template "http://data.tbfy.eu/company/{company/jurisdiction_code}/{company/company_number}/id" ;
