<CompanyMembershipMap>
  a rr:TriplesMap ;

  rml:logicalSource [
    rml:source "input.xml" ; 
    rml:referenceFormulation ql:XPath ;
    rml:iterator "/root/results/company/officers" ;
  ];

  rr:subjectMap [
    rr:template "http://data.tbfy.eu/company/{../jurisdiction_code}/{../company_number}/officer/{officer/id}" ;
    rr:class org:Membership ;
  ];

  rr:predicateObjectMap [
    rr:predicate org:role ;
    rr:objectMap [
      rml:reference "officer/position"
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate org:memberDuring ;
    rr:objectMap [
      rr:template "http://data.tbfy.eu/company/{../jurisdiction_code}/{../company_number}/officer/{officer/id}/interval" 
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate org:organization ;
    rr:objectMap [
      rr:template "http://data.tbfy.eu/company/{../jurisdiction_code}/{../company_number}" 
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate org:member ;
    rr:objectMap [
      rr:template "http://data.tbfy.eu/officer/{officer/id}" 
    ]
  ].

<MembershipIntervalMap>
  a rr:TriplesMap ;

  rml:logicalSource [
    rml:source "input.xml" ; 
    rml:referenceFormulation ql:XPath ;
    rml:iterator "/root/results/company/officers"
  ];

  rr:subjectMap [
    rr:template "http://data.tbfy.eu/company/{../jurisdiction_code}/{../company_number}/officer/{officer/id}/interval" ;
    rr:class time:Interval
  ];

  rr:predicateObjectMap [
    rr:predicate time:hasBeginning ;
    rr:objectMap [
      rml:reference "officer/start_date" ;
      rr:datatype xsd:date
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate time:hasEnd ;
    rr:objectMap [
      rml:reference "officer/end_date" ;
      rr:datatype xsd:date
    ]
  ].

<OfficerMap>
  a rr:TriplesMap ;

  rml:logicalSource [
    rml:source "input.xml" ; 
    rml:referenceFormulation ql:XPath ;
    rml:iterator "/root/results/company/officers"
  ];

  rr:subjectMap [
    rr:template "http://data.tbfy.eu/officer/{officer/id}" ;
    rr:class person:Person
  ];

  rr:predicateObjectMap [
    rr:predicate person:birthName ;
    rr:objectMap [
      rml:reference "officer/name"
    ]
  ];

  rr:predicateObjectMap [
